<?import javafx.scene.control.Button?>
<?import com.pizzaservice.customerpage.views.CartItemView?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Separator?>

<fx:root xmlns:fx="http://javafx.com/fxml"
         type="CartItemView" fx:id="viewCartItem" spacing="10" alignment="CENTER">

    <GridPane hgap="10">
        <Label fx:id="lbHeader" wrapText="true" style="-fx-font-weight: bold" GridPane.hgrow="ALWAYS" GridPane.columnIndex="0" />
        <Button fx:id="btnToggleExpand" text="Info" onAction="#actionToggleExpand" GridPane.columnIndex="1" />
        <Button fx:id="btnDelete" text="Entfernen" onAction="#actionDelete" GridPane.columnIndex="2" />
    </GridPane>

    <Text fx:id="txtInfo" />
    <Separator />
</fx:root>