         type="Fragment" fx:id="fragMainMenu" spacing="20" alignment="CENTER">

    <Label id="lab-main-menu" text="Hauptmenü" />
    <Button fx:id="btnAddPizza" text="Pizza hinzufügen" maxWidth="Infinity" onAction="#actionAddPizza" />
