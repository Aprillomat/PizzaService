<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import com.pizzaservice.customerpage.fragments.Fragment?>

<fx:root xmlns:fx="http://javafx.com/fxml"
         type="Fragment" fx:id="fragChoosePizzaSize" spacing="20" alignment="CENTER">

    <Label text="Wähle die Größe aus:" />

    <GridPane alignment="CENTER" vgap="10">
        <RadioButton fx:id="radSizeSmall" text="Small" GridPane.rowIndex="0"/>
        <RadioButton fx:id="radSizeLarge" text="Large" GridPane.rowIndex="1"/>
        <RadioButton fx:id="radSizeXLarge" text="X-Large" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10" alignment="BOTTOM_CENTER" maxWidth="Infinity">
        <Button fx:id="btnAbort" text="Abbrechen" onAction="#actionAbort" />
        <Button fx:id="btnNext" text="Weiter" onAction="#actionNext" />
    </HBox>
</fx:root>