<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane fx:controller="com.pizzaservice.orderpage.controller.MainMenuController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <Label id="lab-main-menu" text="Hauptmenü" GridPane.rowIndex="0"/>
    <Button text="Pizza hinzufügen" maxWidth="Infinity" onAction="#actionAddPizza" GridPane.rowIndex="1"/>
    <Button text="Bestellung abschließen" maxWidth="Infinity" onAction="#actionFinishOrder" GridPane.rowIndex="2"/>
    <Button text="Bestellung abbrechen" maxWidth="Infinity" onAction="#actionAbortOrder" GridPane.rowIndex="3"/>
</GridPane>