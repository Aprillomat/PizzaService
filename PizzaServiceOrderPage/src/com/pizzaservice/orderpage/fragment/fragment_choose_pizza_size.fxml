<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="com.pizzaservice.orderpage.controller.ChoosePizzaSizeController"
      alignment="CENTER"
      vgap="10"
      xmlns:fx="http://javafx.com/fxml">

    <Label text="Wähle die Größe aus:" GridPane.rowIndex="0"/>

    <RadioButton fx:id="radSizeSmall" text="Small" GridPane.rowIndex="1"/>
    <RadioButton fx:id="radSizeLarge" text="Large" GridPane.rowIndex="2"/>
    <RadioButton fx:id="radSizeXLarge" text="X-Large" GridPane.rowIndex="3"/>

    <HBox spacing="10" alignment="BOTTOM_CENTER" maxWidth="Infinity" GridPane.rowIndex="4">
        <Button text="Abbrechen" onAction="#actionAbort" />
        <Button text="Weiter" onAction="#actionNext" />
    </HBox>
</GridPane>