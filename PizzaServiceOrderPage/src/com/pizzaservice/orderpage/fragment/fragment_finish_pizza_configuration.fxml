<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox fx:controller="com.pizzaservice.orderpage.controller.FinishPizzaConfigurationController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      alignment="CENTER">
    <padding><Insets top="10" bottom="10" left="10" right="10" /></padding>

    <Label text="Deine Pizza Konfiguration:" />

    <Label fx:id="lbConfiguration" wrapText="true" />

    <HBox spacing="10" alignment="BOTTOM_CENTER" maxWidth="Infinity">
        <Button text="Abbrechen" onAction="#actionAbort" />
        <Button text="Fertig" onAction="#actionFinish" />
    </HBox>
</VBox>